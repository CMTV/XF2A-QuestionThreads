    <value>"styles/default/xenforo/reactions/emojione/dislike.png"</value>
  </style_property>
  <style_property property_name="CMTV_QT_unsolve_button_color" group_name="CMTV_QT" title="Unsolve button color" property_type="value" value_type="color" value_group="questionStatusButtons" display_order="110">
