{
    "template": "post_macros",
    "description": "Changing best answer user background",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "<div class=\"message-cell message-cell--user\">",
    "replace": "<xf:if is=\"$post.post_id === $thread.questionthreads_best_post\">\n\t<div class=\"message-cell message-cell--user questionthreads-best-answer questionthreads-user\">\n<xf:else />\n\t$0\n</xf:if>"
}